# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /login                                  Application.login

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

GET     /channels                               Channels.channels(format:'json')
GET     /channels/{<[0-9]+>channelId}           Channels.channel(format:'json')
GET     /channels/{<[0-9]+>channelId}/items     Channels.items(format:'json')

POST    /channels                               Channels.create(format:'json')
PUT     /channels/{<[0-9]+>channelId}           Channels.subscribe(format:'json')
DELETE  /channels/{<[0-9]+>channelId}           Channels.unsubscribe(format:'json')


GET    /items                                   Items.items(format:'json')
GET    /items/{<[0-9]+>itemId}                  Items.item(format:'json')
PUT    /items/{<[0-9]+>itemId}                  Items.action(format:'json')


# Catch all
*       /{controller}/{action}                  {controller}.{action}


